{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

{{! Everything inside the #post tags pulls data from the page }}
{{#post}}

<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav {{#if image}}overlay{{/if}} clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="http://www.minutesdepot.com/en"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
            <a class="menu-button md-signup" href="https://minutesdepot.com/en/sign_up"><span class="word">Sign up</span></a>
        {{/if}}
         <a class="button md-nav" href="https://minutesdepot.com/en/explore"><span class="word">Explore</span></a>
         <a class="button md-nav" href="https://minutesdepot.com/en/pricing"><span class="word">Pricing</span></a>
         <a class="button md-nav selected-nav" href="http://minutesdepot-blog.herokuapp.com/"><span class="word">Blog</span></a>
         <a class="button md-nav" href="https://minutesdepot.com/en/contact"><span class="word">Help</span></a>
    </nav>
</header>

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>
</main>
{{/post}}
