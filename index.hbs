{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="blue-border"></div>
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="http://www.minutesdepot.com/en"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
            <a class="menu-button md-signup" href="https://minutesdepot.com/en/sign_up"><span class="word">Sign up</span></a>
        {{/if}}
         <a class="button md-nav" href="https://minutesdepot.com/en/explore"><span class="word">Explore</span></a>
         <a class="button md-nav" href="https://minutesdepot.com/en/pricing"><span class="word">Pricing</span></a>
         <a class="button md-nav selected-nav" href="http://minutesdepot-blog.herokuapp.com/"><span class="word">Blog</span></a>
         <a class="button md-nav" href="https://minutesdepot.com/en/contact"><span class="word">Help</span></a>
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

{{! The main content area on the homepage }}
<main id="content" class="content" role="main">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}

</main>
